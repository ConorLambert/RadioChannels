@{
    ViewBag.Title = "Favourites";
}

@if (Request.IsAuthenticated)
{
    <div class="container-fluid header-container">
        <div class="row">
            <div class="col-xs-3">
                <h2 id="main-heading">Favourites</h2>
            </div>
            <div class="col-sm-9">
                <div id="categories-container" class="cbp-af-header cbp-af-header-shrink">
                    @RenderPage("~/Views/Shared/_Categories.cshtml")
                </div>
            </div>
        </div>
    </div>

    <div id="stations-container">
        <div id="stations">
            <div class="container-fluid">
            </div>
        </div>
    </div>
    <script>    
        if (!window.location.href.includes("favourites"))  // if we have moved back to this page then, dont push it
            history.pushState("favourites", null, "/#favourites");           
        triggerFavouritesGenreSelect();
        if (favourites !== undefined) {
            $("#stations").empty();
            $("#stations").append(favourites);   // if the user has any favourites then add them to the stations container        
            $(favourites).find(".row").each(function (index, elem) {
                if (!isPlaying(this)) {
                    initializeChannelItem(this);
                    triggerMouseOverIcon($(this).find(".activity"));
                } else {
                    $("#stations .row:eq(" + index + ")").replaceWith($(current_channel).closest(".row").clone());
                    current_channel = $("#stations .row:eq(" + index + ") .activity")[0];
                }
            });
        } else {

        }    
    </script>
}
else
{
    <p> You must be a <a onclick="ajax_request('/Account/Register', ActionOnReady)"> registered </a> member and <a onclick="ajax_request('/Account/LogIn', ActionOnReady)"> logged in</a> to view this page </p>
}
