@model IEnumerable<RadioChannels.Models.Channel>

@{
    ViewBag.Title = "Favourites";
}

<h2 id="main-heading">Favourites</h2>
<div id="categories">
    <ul id="genres">
        <li><a href="#">All</a></li>
        <li><a href="#">Acid House</a></li>
        <li><a href="#">Chillout</a></li>
        <li><a href="#">Electro</a></li>
        <li><a href="#">Drum And Bass</a></li>
        <li><a href="#">Dubstep</a></li>
        <li><a href="#">Deep House</a></li>
        <li><a href="#">House</a></li>
        <li><a href="#">Hard House</a></li>
        <li><a href="#">Progressive</a></li>
        <li><a href="#">Techno</a></li>
        <li><a href="#">Trance</a></li>
        <li><a href="#">Trip Hop</a></li>
    </ul>
</div>
<div id="stations-container">
    <p>

    </p>
    <div id="stations">
        <ul>            
            @for (int i = 0; i < Model.Count(); ++i)
            {
                <li id="@i">
                    <div class="image">
                        <span class="fav-btn"></span>
                        <span class="default-logo"></span>
                    </div>
                    <div class="info">
                        <h3 class="title"> <a href="/00sclubhits"> @Model.ElementAt(i).Name</a></h3>
                        <p class="now-playing">
                            <span class="label">now playing</span>
                            <a class="track" href="insert/beatport/here">@Model.ElementAt(i).CurrentTrack</a>
                        </p>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>




