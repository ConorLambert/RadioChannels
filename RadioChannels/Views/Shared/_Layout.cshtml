<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <link href="~/Content/stylesheets/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/stylesheets/main.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/stylesheets/loading.css" rel="stylesheet" type="text/css" />
    <link  href="~/Content/stylesheets/icons.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jplayer/2.9.2/jplayer/jquery.jplayer.js"></script>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Amiri|Cantarell|Crimson+Text|Gentium+Basic|Muli|Nunito+Sans|Quattrocento+Sans|Quicksand|Raleway|Ubuntu" rel="stylesheet">
</head>
<body>
    <div id="page_wrapper">
        <header id="page_header"></header>
        <nav id="navigation">
            <ul>
                <li id="item-radio-stations"><span></span><a href="#">Radio Stations</a></li>
                <li id="item-favourites"><span></span><a href="#">Favourites</a></li>
                <li id="item-sign-in"><span></span><a href="#">Sign In</a></li>
            </ul>
        </nav>
        <main>
            <h2 id="main-heading">Radio Stations</h2>
            <div id="categories">
                <ul id="genres">
                    <li><a href="#">All</a></li>
                    <li><a href="#">Acid House</a></li>
                    <li><a href="#">Chillout</a></li>
                    <li><a href="#">Electro</a></li>
                    <li><a href="#">Drum And Bass</a></li>                    
                    <li><a href="#">Dubstep</a></li>
                    <li><a href="#">Deep House</a></li>
                    <li><a href="#">House</a></li>
                    <li><a href="#">Hard House</a></li>                                                      
                    <li><a href="#">Progressive</a></li>
                    <li><a href="#">Techno</a></li>
                    <li><a href="#">Trance</a></li>
                    <li><a href="#">Trip Hop</a></li>
                </ul>
            </div>
            <div id="stations">
                <ul>
                    
                </ul>
            </div>
        </main>
        <div id="audio-player" class="audio-player-wrapper">
            <div id="jplayer" class="jp-jplayer" style="width: 0px; height: 0px;">
                <img id="jp_poster_0" style="width: 0px; height: 0px; display: none;">
                <audio id="jp_audio_0" preload="none"></audio>
            </div>            
            <div class="audio-player-image"><img /></div>                
            <div class="audio-player-song-name"></div>
            <div id="add-favourite"></div>
            <div class="audio-player-controls">
                <a role="button" class="audio-player-button audio-player-place-pause-button icon-play"></a>
                <span class="audio-player-progress">
                    <span class="audio-player-progress-bar"></span>
                </span>
            </div>
            <div class="volumeBar">
                <i class="volume-down" aria-hidden="true"></i>
                <div class="audio-player-volume-bar"></div>
                <i class="volume-up" aria-hidden="true"></i>
            </div>
        </div>
    </div>
    @RenderBody()
    <footer>
        The Footer Goes Here
    </footer>
    
    <script src="~/Scripts/find_station.js" type="text/javascript"></script>
    <script src="~/Scripts/control_media.js" type="text/javascript"></script>    
    <script src="~/Scripts/animations.js" type="text/javascript"></script>       
    @RenderSection("Scripts", required: false)
</body>
</html>